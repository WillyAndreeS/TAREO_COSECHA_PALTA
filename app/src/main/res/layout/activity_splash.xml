<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/estilo_radial_centro"
    android:layout_height="match_parent"
    tools:context=".Splash">

    <!--<ImageView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:id="@+id/logo_splash"
        android:src="@drawable/logo_color_h"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:id="@+id/ly_logos"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/logo_splash"
            android:src="@drawable/logo_gcp"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:background="@drawable/estilo_boton_black_circular"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/acp_logo_vertical"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icp_003_256"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/qali_003_256"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/cpc_003_256"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true"/>

        <TextView
            android:layout_gravity="center"
            android:text="@string/version_y_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:text="Tecnologías de la Información"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>