<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_registrar_salida"
    tools:context=".PantallaRegistrarSalida">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:layout_weight="1"
                android:digits="0123456789"
                android:drawableLeft="@drawable/ic_codigo_negro"
                android:drawablePadding="8dp"
                android:id="@+id/edt_dni"
                android:hint="DNI Trabajador"
                android:textColor="#000"
                android:maxLength="8"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_marginLeft="5dp"
                android:background="@drawable/estilo_boton_black_circular"
                android:src="@drawable/ic_buscar_blanco"
                android:layout_weight="0"
                android:id="@+id/ibtnBuscarTrabajador"
                android:layout_width="60dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#502d2d2d"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_dni_oculto"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:hint="--------"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_dni_nombre"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold|italic"
            android:hint="-------- - -------- ------ ------"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="SALIDA: "
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtComboHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="2"
                android:background="@drawable/estilo_caja_texto"
                android:digits="0123456789"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_flecha_abajo"
                android:hint="00:00:00 A.M."
                android:maxLength="8"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_grabar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/estilo_boton_verde_circular"
                android:elevation="16dp"
                android:text="GRABAR"
                android:textColor="#fff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/estilo_boton_black_circular"
                android:elevation="16dp"
                android:text="CANCELAR"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#502d2d2d"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="0"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/item_cab_dni"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/colorAccentVerde"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="DNI"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="visible"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="NOMBRE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/item_cab_rend"
                    android:layout_marginLeft="1dp"
                    android:background="#2d2d2d"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="SALIDA"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:layout_margin="2dp"
            android:visibility="visible"
            android:id="@+id/lv_lista_salidas_hoy"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

</RelativeLayout>