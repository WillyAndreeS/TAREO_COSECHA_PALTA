            <TextView
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:text="Consumidor"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableLeft="@drawable/ic_consumidor_negro"
                android:drawableTint="@color/colorNegroBajo"
                android:drawablePadding="8dp"
                android:id="@+id/edt_consumidor"
                android:textColor="#000"
                android:hint="Selecciona Consumidor"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<TextView
                android:textSize="12sp"
