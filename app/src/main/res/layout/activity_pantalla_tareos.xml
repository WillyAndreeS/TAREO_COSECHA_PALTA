                android:layout_marginBottom="4dp"
                android:text="Código"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_id_dispositivo"
                android:drawablePadding="8dp"
                android:id="@+id/edt_codigo"
                android:hint="Código"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:text="Fecha"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_calendario"
                android:drawablePadding="8dp"
                android:id="@+id/edt_fecha"
                android:textColor="#000"
                android:hint="Selecciona Fecha"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:text="Actividad"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableLeft="@drawable/ic_actividad"
                android:drawablePadding="8dp"
                android:id="@+id/edt_actividad"
                android:textColor="#000"
                android:hint="Selecciona Actividad"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_titulo_labor"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:text="Labor"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableLeft="@drawable/ic_labor"
                android:drawablePadding="8dp"
                android:id="@+id/edt_labor"
                android:textColor="#000"
                android:hint="Selecciona Labor"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/estilo_caja_texto"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <!--<TextView
                android:id="@+id/txt_titulo_sublabor"
                android:textSize="12sp"
