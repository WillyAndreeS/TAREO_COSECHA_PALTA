<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_dni"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="--------"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_nombres"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="AASIUISIAS AASJHA"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:background="@drawable/estilo_boton_rojo_circular"
                android:src="@drawable/ic_eliminar_blanco"
                android:id="@+id/ibtnEliminarAsistencia"
                android:layout_width="60dp"
                android:layout_height="35dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>