<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_fila_persona"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ly_numero"
            android:gravity="center"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_conteo"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="##"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_nombres"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="-------"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_dni"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="------- -------- --------"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_ticket"
                android:textColor="#000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="C########"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_subtotal"
        android:visibility="visible"
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="#102d2d2d"
                android:textColor="@color/colorPrimaryDark"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:gravity="right"
                android:textStyle="bold"
                android:text="SubTotal:"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="visible"
                    android:background="#2d2d2d"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp">
                </LinearLayout>

                <TextView
                    android:background="#302d2d2d"
                    android:gravity="center"
                    android:id="@+id/item_subtotal"
                    android:textColor="#000"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="###"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="#2d2d2d"
        android:id="@+id/fila"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp">
    </LinearLayout>
</LinearLayout>